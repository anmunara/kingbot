# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
CLIENT_ID=your_client_id_here

# Optional: For guild-specific command deployment during development
GUILD_ID=your_test_guild_id_here

# Web Dashboard (OAuth2)
CLIENT_SECRET=your_client_secret_here
REDIRECT_URI=http://localhost:3000/auth/callback
SESSION_SECRET=random-secret-key-change-in-production
JWT_SECRET=your-super-secret-jwt-key-change-this
WEB_PORT=3000

# Audit Log (Discord Webhook)
# Create a webhook in your Discord server for security monitoring
# Server Settings > Integrations > Webhooks > New Webhook
AUDIT_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN
